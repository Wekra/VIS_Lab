<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.custom.i18n.resources" value="global"/>

    <package name="webshop" namespace="/webshop" extends="struts-default">

        <default-action-ref name="HelloWorld" />

        <action name="Homepage" class="de.hska.vis.webshop.HelloWorld">
            <result>/WEB-INF/pages/Homepage.jsp</result>
        </action>

        <action name="Login_*" method="{1}" class="de.hska.vis.webshop.Login">
            <result name="input">/WEB-INF/pages/Login.jsp</result>
            <result type="redirectAction">Menu</result>
        </action>

        <action name="*" class="de.hska.vis.webshop.ExampleSupport">
            <result>/WEB-INF/example/{1}.jsp</result>
        </action>

        <!-- Add additional "webshop" package actions here. -->

    </package>

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index"/>

        <action name="index">
            <result type="redirectAction">
                <param name="actionName">Homepage</param>
                <param name="namespace">/webshop</param>
            </result>
        </action>

        <action name="Signup" class="de.hska.vis.webshop.Signup">
            <result>/WEB-INF/pages/Signup.jsp</result>
        </action>

    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
